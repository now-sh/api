<script>
document.addEventListener('DOMContentLoaded', async function() {
    console.log('DOM loaded, loading stats...');
    await loadQuickStats();
});

// Also try loading after a delay in case of timing issues
setTimeout(() => {
    console.log('Timeout fallback loading stats...');
    loadQuickStats();
}, 2000);

async function loadQuickStats() {
    const quickDiv = document.getElementById('quickStats');
    
    try {
        const response = await fetch('/api/v1/world/covid');
        const data = await response.json();
        
        console.log('COVID API Response:', data); // Debug log
        
        if (data && data.global) {
            const stats = data.global;
            console.log('Global stats:', stats); // Debug log
            
            // Update the numbers in existing cards instead of replacing HTML
            const numbers = quickDiv.querySelectorAll('.quick-number');
            if (numbers.length === 4) {
                numbers[0].textContent = formatNumber(stats.cases);
                numbers[1].textContent = formatNumber(stats.deaths);
                numbers[2].textContent = formatNumber(stats.recovered);
                numbers[3].textContent = formatNumber(stats.active);
            }
        } else {
            console.log('No global data found:', data);
            quickDiv.innerHTML = '<div class="error">Unable to load global statistics - no data available</div>';
        }
    } catch (error) {
        console.error('COVID API Error:', error);
        quickDiv.innerHTML = '<div class="error">Error loading quick statistics: ' + error.message + '</div>';
    }
}

function formatNumber(num) {
    if (!num) return '0';
    // Handle both string and number inputs
    if (typeof num === 'string') {
        return num; // Already formatted from API
    }
    return new Intl.NumberFormat().format(num);
}
</script>