<script>
document.addEventListener('DOMContentLoaded', async function() {
    await loadNYSStats();
    await loadTopCounties();
});

async function loadNYSStats() {
    const nysDiv = document.getElementById('nysStats');

    try {
        const response = await fetch('/api/v1/world/nys');
        const data = await response.json();

        // API returns { nys: {...} } without success wrapper
        const stats = data.nys || data;
        if (stats && (stats.cases || stats.state)) {
            nysDiv.innerHTML = `
                <div class="stat-card">
                    <span class="stat-emoji">ğŸ˜·</span>
                    <div class="stat-number">${formatNumber(stats.cases)}</div>
                    <div class="stat-label">Total Cases</div>
                </div>
                <div class="stat-card">
                    <span class="stat-emoji">ğŸ’€</span>
                    <div class="stat-number">${formatNumber(stats.deaths)}</div>
                    <div class="stat-label">Deaths</div>
                </div>
                <div class="stat-card">
                    <span class="stat-emoji">ğŸ’š</span>
                    <div class="stat-number">${formatNumber(stats.recovered || 0)}</div>
                    <div class="stat-label">Recovered</div>
                </div>
                <div class="stat-card">
                    <span class="stat-emoji">ğŸ¥</span>
                    <div class="stat-number">${formatNumber(stats.active || (stats.cases - stats.deaths - (stats.recovered || 0)))}</div>
                    <div class="stat-label">Active Cases</div>
                </div>
            `;
        } else if (data.error) {
            nysDiv.innerHTML = `<div class="error">${data.error}</div>`;
        } else {
            nysDiv.innerHTML = '<div class="error">Unable to load New York State statistics</div>';
        }
    } catch (error) {
        nysDiv.innerHTML = '<div class="error">Error loading New York State statistics</div>';
    }
}

async function loadTopCounties() {
    const countiesDiv = document.getElementById('topCounties');

    try {
        // NYS county data from disease.sh
        const response = await fetch('/api/v1/world/disease/covid-19/nyt/counties');
        const data = await response.json();

        // Filter for NY state and get recent data
        let counties = [];
        if (Array.isArray(data)) {
            const nyCounties = data.filter(c => c.state === 'New York');
            // Get unique counties with latest data
            const countyMap = new Map();
            nyCounties.forEach(c => {
                if (!countyMap.has(c.county) || new Date(c.date) > new Date(countyMap.get(c.county).date)) {
                    countyMap.set(c.county, c);
                }
            });
            counties = Array.from(countyMap.values())
                .sort((a, b) => (b.cases || 0) - (a.cases || 0))
                .slice(0, 12);
        }

        if (counties.length > 0) {
            const html = counties.map(county => `
                <div class="county-card">
                    <div class="county-name">
                        <span>${getCountyEmoji(county.county)}</span>
                        ${county.county}
                    </div>
                    <div class="county-stats">
                        <div>
                            <strong>${formatNumber(county.cases)}</strong><br>
                            <small>Cases</small>
                        </div>
                        <div>
                            <strong>${formatNumber(county.deaths)}</strong><br>
                            <small>Deaths</small>
                        </div>
                        <div>
                            <strong>${formatNumber(county.active || 0)}</strong><br>
                            <small>Active</small>
                        </div>
                    </div>
                </div>
            `).join('');

            countiesDiv.innerHTML = html;
        } else {
            countiesDiv.innerHTML = '<div class="error">County data unavailable. The NYT county dataset may have been discontinued.</div>';
        }
    } catch (error) {
        countiesDiv.innerHTML = '<div class="error">County data unavailable</div>';
    }
}

function formatNumber(num) {
    if (!num) return '0';
    return new Intl.NumberFormat().format(num);
}

