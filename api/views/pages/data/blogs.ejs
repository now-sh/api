<div class="hero fade-in">
    <h1>My Blog Posts</h1>
    <p class="lead">View blog posts from GitHub repositories</p>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <h2 class="card-title">My Blog Posts</h2>
            <p class="card-text">Latest posts from malaks-us/jason repository</p>
            
            <% if (typeof blogData !== 'undefined' && blogData && blogData.posts) { %>
                <div class="blog-info mb-4">
                    <span class="badge bg-primary"><%= blogData.total_posts || blogData.posts.length %> total posts</span>
                    <span class="badge bg-info">Repository: <%= blogData.repository %></span>
                </div>
                
                <div class="blog-posts">
                    <% blogData.posts.slice(0, 20).forEach((post, index) => { %>
                        <article class="blog-post">
                            <div class="blog-header">
                                <h3 class="blog-title">
                                    <a href="<%= post.html_url %>" target="_blank"><%= post.title %></a>
                                </h3>
                                <div class="blog-meta">
                                    <span class="blog-date">üìÖ <%= post.date %></span>
                                    <% if (post.author) { %>
                                        <span class="blog-author">üë§ <%= post.author %></span>
                                    <% } %>
                                    <% if (post.categories && post.categories !== 'null' && post.categories !== '[blog, ]') { %>
                                        <span class="blog-category">üè∑Ô∏è <%= post.categories %></span>
                                    <% } %>
                                </div>
                            </div>
                            <% if (post.excerpt) { %>
                                <div class="blog-excerpt">
                                    <%= post.excerpt.substring(0, 300) %>
                                    <% if (post.excerpt.length > 300) { %>...
                                        <a href="<%= post.html_url %>" target="_blank" class="read-more">Read More</a>
                                    <% } %>
                                </div>
                            <% } %>
                            <div class="blog-footer">
                                <a href="<%= post.html_url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-box-arrow-up-right"></i> Read Post
                                </a>
                                <span class="post-number">#<%= index + 1 %></span>
                            </div>
                        </article>
                    <% }) %>
                    
                    <% if (blogData.posts.length > 20) { %>
                        <div class="text-muted text-center mt-4">
                            Showing latest 20 posts of <%= blogData.total_posts %>
                        </div>
                    <% } %>
                </div>
            <% } else if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <h4>Failed to load posts</h4>
                    <p><%= error %></p>
                </div>
            <% } else { %>
                <div class="loading-state">
                    <p>Loading blog posts from GitHub repository...</p>
                    <p class="text-muted">Fetching latest posts from malaks-us/jason</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
article.blog-post {
    border: 1px solid var(--border-color);
    padding: 2rem;
    margin-bottom: 2rem;
    border-radius: var(--radius-lg);
    background: linear-gradient(135deg, var(--bg-secondary) 0%, rgba(139, 69, 233, 0.05) 100%);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

article.blog-post::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--purple), var(--cyan), var(--pink));
    opacity: 0;
    transition: opacity 0.3s ease;
}

article.blog-post:hover {
    border-color: var(--purple);
    transform: translateY(-4px);
    box-shadow: 0 16px 40px rgba(139, 69, 233, 0.2);
}

article.blog-post:hover::before {
    opacity: 1;
}

.blog-title {
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
}

.blog-title a {
    color: var(--purple);
    text-decoration: none;
    transition: color 0.2s ease;
}

.blog-title a:hover {
    color: var(--cyan);
}

.blog-post h5 a {
    color: inherit;
    text-decoration: none;
}

.blog-post h5 a:hover {
    color: var(--cyan);
}

.blog-post .meta {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.blog-post .meta > * {
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.blog-post .meta .date {
    font-weight: 600;
    color: var(--cyan);
}

.blog-post .meta .tags,
.blog-post .meta .categories {
    display: inline-flex;
    gap: 0.5rem;
}

.blog-post .meta .tag,
.blog-post .meta .category {
    background: var(--bg-primary);
    color: var(--text-primary);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    border: 1px solid var(--border-color);
}

.blog-post .content {
    margin-top: 1rem;
    color: var(--text-primary);
    line-height: 1.6;
}

.blog-post .excerpt {
    margin-bottom: 1rem;
}

.blog-post .read-more {
    color: var(--cyan);
    cursor: pointer;
    font-size: 0.875rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
}

.blog-post .read-more:hover {
    color: var(--purple);
}

.blog-post .full-content {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
    max-height: 400px;
    overflow-y: auto;
    display: none;
}

.blog-post .full-content.show {
    display: block;
}

.loading {
    text-align: center;
    padding: 2rem;
    color: var(--cyan);
}

.error {
    text-align: center;
    padding: 2rem;
    color: var(--red);
}

.empty-state {
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
}
</style>

