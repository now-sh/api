<div class="hero fade-in">
    <h1>Timezone Information</h1>
    <p class="lead">Convert times between different timezones</p>
</div>

<div class="card">
    <h2>Current Times</h2>
    <div id="currentTimes" class="times-grid">
        <div class="loading">Loading times...</div>
    </div>
</div>

<div class="card mt-6">
    <h2>Timezone Converter</h2>
    
    <form id="converterForm" class="converter-form">
        <div class="form-row">
            <div class="form-group">
                <label for="sourceTime" class="form-label">Date & Time</label>
                <input 
                    type="datetime-local" 
                    id="sourceTime" 
                    name="sourceTime" 
                    class="form-control"
                    required
                />
            </div>
            
            <div class="form-group">
                <label for="fromTimezone" class="form-label">From Timezone</label>
                <select id="fromTimezone" name="fromTimezone" class="form-control" required>
                    <option value="">Select timezone...</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="toTimezone" class="form-label">To Timezone</label>
                <select id="toTimezone" name="toTimezone" class="form-control" required>
                    <option value="">Select timezone...</option>
                </select>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Convert Time</button>
    </form>
    
    <div id="conversionResult" class="result-display" style="display: none;">
        <h3>Conversion Result</h3>
        <div class="conversion-details"></div>
    </div>
</div>

<div class="card mt-6">
    <h3>All Timezones</h3>
    <div class="search-box">
        <input 
            type="text" 
            id="searchTimezone" 
            class="form-control" 
            placeholder="Search timezones..."
        />
    </div>
    <div id="timezonesList" class="timezones-list">
        <div class="loading">Loading timezones...</div>
    </div>
</div>

