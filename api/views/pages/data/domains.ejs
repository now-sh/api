<div class="hero fade-in">
    <h1>My Domains</h1>
    <p class="lead">View all registered domains and subdomains</p>
</div>

<div class="card">
    <h2>Domain List</h2>
    <p>Below are all the domains and subdomains currently in the system.</p>
    
    <div class="search-box mb-4">
        <form method="POST" action="/data/domains">
            <div class="input-group">
                <input 
                    type="text" 
                    id="domainSearch"
                    name="search"
                    class="form-control" 
                    placeholder="Search domains..."
                    value=""
                />
                <button type="submit" class="btn btn-primary">Search</button>
                <a href="/data/domains" class="btn btn-secondary">Show All</a>
            </div>
        </form>
    </div>
    
    <% if (typeof domainsData !== 'undefined' && domainsData && domainsData.domains) { %>
        <div class="success">✅ Loaded <%= domainsData.domains.length %> domains and <%= (domainsData.subDomains || domainsData.subdomains || []).length %> subdomains</div>
    <% } else { %>
        <div id="loadingStatus" class="loading">Loading domains...</div>
    <% } %>
</div>

<div class="card mt-6">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Domains</h3>
        <span id="domainCount" class="badge bg-purple">
            <% if (typeof domainsData !== 'undefined' && domainsData && domainsData.domains) { %>
                <%= domainsData.domains.length %> domains
            <% } %>
        </span>
    </div>
    <div id="domainsList" class="domains-grid">
        <% if (typeof domainsData !== 'undefined' && domainsData && domainsData.domains) { %>
            <% domainsData.domains.forEach(domain => { %>
                <div class="domain-item" onclick="copyDomain(this, '<%= domain %>')">
                    <div class="domain-name"><%= domain %></div>
                    <div class="domain-status status-taken">Domain</div>
                    <div class="domain-details">Click to copy</div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="empty-state">No domains available</div>
        <% } %>
    </div>
</div>

<div class="card mt-6">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Subdomains</h3>
        <span id="subdomainCount" class="badge bg-purple">
            <%
            const subdomains = domainsData?.subDomains || domainsData?.subdomains || [];
            const filteredSubdomains = subdomains.filter(s => s && s.trim());
            %>
            <% if (typeof domainsData !== 'undefined' && domainsData && filteredSubdomains.length > 0) { %>
                <%= filteredSubdomains.length %> subdomains
            <% } %>
        </span>
    </div>
    <div id="subdomainsList" class="domains-grid">
        <% if (typeof domainsData !== 'undefined' && domainsData && filteredSubdomains.length > 0) { %>
            <% filteredSubdomains.forEach(subdomain => { %>
                <div class="domain-item" onclick="copyDomain(this, '<%= subdomain %>')">
                    <div class="domain-name"><%= subdomain %></div>
                    <div class="domain-status status-available">Subdomain</div>
                    <div class="domain-details">Click to copy</div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="empty-state">No subdomains available</div>
        <% } %>
    </div>
</div>

<div class="info-box mt-4">
    <p class="text-muted">
        <i class="bi bi-info-circle"></i> 
        Click on any domain to copy it to your clipboard
    </p>
</div>

<style>
.domain-form {
    max-width: 500px;
    margin: 0 auto;
}

.form-group {
    margin-bottom: var(--space-4);
}

.form-label {
    display: block;
    margin-bottom: var(--space-2);
    font-weight: 500;
    color: var(--text-primary);
}

.form-control {
    width: 100%;
    padding: var(--space-3);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--text-base);
    transition: all 0.2s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--purple);
    box-shadow: 0 0 0 3px rgba(189, 147, 249, 0.1);
}

.result-container {
    margin-top: var(--space-6);
    padding: var(--space-4);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
}

.result-content {
    margin-top: var(--space-3);
}

.domain-info {
    display: grid;
    gap: var(--space-3);
}

.info-row {
    display: flex;
    justify-content: space-between;
    padding: var(--space-2);
    background-color: var(--bg-primary);
    border-radius: var(--radius-sm);
}

.info-label {
    font-weight: 500;
    color: var(--text-secondary);
}

.info-value {
    color: var(--text-primary);
}

.domains-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
}

/* Mobile-first responsive design */
@media (min-width: 576px) {
    .domains-grid {
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    }
}

@media (min-width: 768px) {
    .domains-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
}

.domain-item {
    padding: var(--space-4);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
    cursor: pointer;
}

.domain-item:hover {
    border-color: var(--purple);
    transform: translateY(-2px);
}

.domain-name {
    font-family: 'Monaco', 'Consolas', monospace;
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--cyan);
    margin-bottom: var(--space-2);
}

.domain-status {
    display: inline-block;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    margin-bottom: var(--space-2);
}

.status-available {
    background-color: rgba(80, 250, 123, 0.2);
    color: var(--green);
}

.status-taken {
    background-color: rgba(255, 85, 85, 0.2);
    color: var(--red);
}

.domain-details {
    font-size: var(--text-sm);
    color: var(--text-secondary);
}

.loading {
    text-align: center;
    padding: var(--space-6);
    color: var(--text-secondary);
}

.error-message {
    background-color: rgba(255, 85, 85, 0.1);
    border: 1px solid var(--red);
    color: var(--red);
    padding: var(--space-3);
    border-radius: var(--radius-md);
    margin-top: var(--space-3);
}

.success-message {
    background-color: rgba(80, 250, 123, 0.1);
    border: 1px solid var(--green);
    color: var(--green);
    padding: var(--space-3);
    border-radius: var(--radius-md);
    margin-top: var(--space-3);
}

.badge.bg-purple {
    background-color: var(--purple);
    color: var(--background);
    font-size: var(--text-sm);
    padding: 0.5rem 1rem;
}

.info-box {
    text-align: center;
    padding: 1rem;
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
}

.empty-state {
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
}
</style>

<script>
// Real-time domain search
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('domainSearch');
    const allDomains = document.querySelectorAll('.domain-item');
    
    if (searchInput && allDomains.length > 0) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            let visibleCount = 0;
            
            allDomains.forEach(domain => {
                const domainName = domain.querySelector('.domain-name').textContent.toLowerCase();
                if (domainName.includes(searchTerm)) {
                    domain.style.display = '';
                    visibleCount++;
                } else {
                    domain.style.display = 'none';
                }
            });
            
            // Update count
            const countEl = document.getElementById('domainCount');
            if (countEl) {
                countEl.textContent = `${visibleCount} domains` + (searchTerm ? ` (filtered)` : '');
            }
        });
    }
});

// Copy function with visual feedback
function copyDomain(element, domain) {
    if (navigator.clipboard) {
        navigator.clipboard.writeText(domain).then(() => {
            // Change background color to green
            element.style.backgroundColor = 'rgba(80, 250, 123, 0.3)';
            element.style.borderColor = 'var(--green)';

            // Update the details text
            const detailsEl = element.querySelector('.domain-details');
            const originalText = detailsEl.textContent;
            detailsEl.textContent = '✓ Copied!';
            detailsEl.style.color = 'var(--green)';

            // Reset after 1 second
            setTimeout(() => {
                element.style.backgroundColor = '';
                element.style.borderColor = '';
                detailsEl.textContent = originalText;
                detailsEl.style.color = '';
            }, 1000);
        }).catch(err => {
            console.error('Failed to copy:', err);
            // Show error feedback
            element.style.backgroundColor = 'rgba(255, 85, 85, 0.3)';
            element.style.borderColor = 'var(--red)';
            setTimeout(() => {
                element.style.backgroundColor = '';
                element.style.borderColor = '';
            }, 1000);
        });
    }
}
</script>

