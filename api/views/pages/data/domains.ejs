<div class="hero fade-in">
    <h1>My Domains</h1>
    <p class="lead">View all registered domains and subdomains</p>
</div>

<div class="card">
    <h2>Domain List</h2>
    <p>Below are all the domains and subdomains currently in the system.</p>
    
    <div class="search-box mb-4">
        <input 
            type="text" 
            id="domainSearch" 
            class="form-control" 
            placeholder="Search domains..."
        />
    </div>
    
    <div id="loadingStatus" class="loading">Loading domains...</div>
</div>

<div class="card mt-6">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>All Domains</h3>
        <span id="domainCount" class="badge bg-purple"></span>
    </div>
    <div id="domainsList" class="domains-grid">
        <!-- Domains will be loaded here -->
    </div>
</div>

<div class="info-box mt-4">
    <p class="text-muted">
        <i class="bi bi-info-circle"></i> 
        Click on any domain to copy it to your clipboard
    </p>
</div>

<style>
.domain-form {
    max-width: 500px;
    margin: 0 auto;
}

.form-group {
    margin-bottom: var(--space-4);
}

.form-label {
    display: block;
    margin-bottom: var(--space-2);
    font-weight: 500;
    color: var(--text-primary);
}

.form-control {
    width: 100%;
    padding: var(--space-3);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--text-base);
    transition: all 0.2s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--purple);
    box-shadow: 0 0 0 3px rgba(189, 147, 249, 0.1);
}

.result-container {
    margin-top: var(--space-6);
    padding: var(--space-4);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
}

.result-content {
    margin-top: var(--space-3);
}

.domain-info {
    display: grid;
    gap: var(--space-3);
}

.info-row {
    display: flex;
    justify-content: space-between;
    padding: var(--space-2);
    background-color: var(--bg-primary);
    border-radius: var(--radius-sm);
}

.info-label {
    font-weight: 500;
    color: var(--text-secondary);
}

.info-value {
    color: var(--text-primary);
}

.domains-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
}

/* Mobile-first responsive design */
@media (min-width: 576px) {
    .domains-grid {
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    }
}

@media (min-width: 768px) {
    .domains-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
}

.domain-item {
    padding: var(--space-4);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
    cursor: pointer;
}

.domain-item:hover {
    border-color: var(--purple);
    transform: translateY(-2px);
}

.domain-name {
    font-family: 'Monaco', 'Consolas', monospace;
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--cyan);
    margin-bottom: var(--space-2);
}

.domain-status {
    display: inline-block;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    margin-bottom: var(--space-2);
}

.status-available {
    background-color: rgba(80, 250, 123, 0.2);
    color: var(--green);
}

.status-taken {
    background-color: rgba(255, 85, 85, 0.2);
    color: var(--red);
}

.domain-details {
    font-size: var(--text-sm);
    color: var(--text-secondary);
}

.loading {
    text-align: center;
    padding: var(--space-6);
    color: var(--text-secondary);
}

.error-message {
    background-color: rgba(255, 85, 85, 0.1);
    border: 1px solid var(--red);
    color: var(--red);
    padding: var(--space-3);
    border-radius: var(--radius-md);
    margin-top: var(--space-3);
}

.success-message {
    background-color: rgba(80, 250, 123, 0.1);
    border: 1px solid var(--green);
    color: var(--green);
    padding: var(--space-3);
    border-radius: var(--radius-md);
    margin-top: var(--space-3);
}

.badge.bg-purple {
    background-color: var(--purple);
    color: var(--background);
    font-size: var(--text-sm);
    padding: 0.5rem 1rem;
}

.info-box {
    text-align: center;
    padding: 1rem;
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
}

.empty-state {
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', async function() {
    console.log('DOM loaded, loading domains...');
    
    try {
        const response = await fetch('/api/v1/me/info/domains');
        const data = await response.json();
        
        if (data.domains) {
            const domainsList = document.getElementById('domainsList');
            const loadingStatus = document.getElementById('loadingStatus');
            const domainCount = document.getElementById('domainCount');
            
            // Update count
            domainCount.textContent = `${data.domains.length} domains`;
            
            // Display domains
            const html = data.domains.map(domain => `
                <div class="domain-item" onclick="copyDomain('${domain}')">
                    <div class="domain-name">${domain}</div>
                    <div class="domain-status status-taken">Domain</div>
                    <div class="domain-details">Click to copy</div>
                </div>
            `).join('');
            
            domainsList.innerHTML = html;
            loadingStatus.style.display = 'none';
        }
    } catch (error) {
        console.error('Domains error:', error);
    }
});

function copyDomain(domain) {
    navigator.clipboard.writeText(domain);
    alert('Copied: ' + domain);
}
</script>

