<div class="hero fade-in">
    <h1>School Closings & Delays</h1>
    <p class="lead">Real-time school closing and delay information</p>
</div>

<div class="alert-banner" id="weatherAlert" style="display: none;">
    <div class="alert-content"></div>
</div>

<div class="card">
    <div class="closings-header">
        <h2>Current Status</h2>
        <div class="last-updated">
            Last updated: <span id="lastUpdated">Loading...</span>
        </div>
    </div>
    
    <div class="filter-controls">
        <input 
            type="text" 
            id="searchInput" 
            class="form-control search-box" 
            placeholder="Search schools, districts, or organizations..."
        />
        
        <div class="filter-buttons">
            <button class="filter-btn active" data-filter="all">All</button>
            <button class="filter-btn" data-filter="closed">Closed</button>
            <button class="filter-btn" data-filter="delayed">Delayed</button>
            <button class="filter-btn" data-filter="early">Early Dismissal</button>
        </div>
    </div>
    
    <div id="closingsList" class="closings-list">
        <div class="loading">Loading school closings...</div>
    </div>
</div>

<div class="card mt-6">
    <h3>Submit a Closing</h3>
    
    <form id="closingForm" class="closing-form">
        <div class="form-group">
            <label for="schoolName" class="form-label">School/Organization Name</label>
            <input 
                type="text" 
                id="schoolName" 
                name="schoolName" 
                class="form-control" 
                placeholder="Enter school or organization name"
                required
            />
        </div>
        
        <div class="form-group">
            <label for="status" class="form-label">Status</label>
            <select id="status" name="status" class="form-control" required>
                <option value="">Select status...</option>
                <option value="closed">Closed</option>
                <option value="delayed">Delayed Opening</option>
                <option value="early">Early Dismissal</option>
            </select>
        </div>
        
        <div class="form-group" id="delayTimeGroup" style="display: none;">
            <label for="delayTime" class="form-label">Delay/Dismissal Time</label>
            <input 
                type="text" 
                id="delayTime" 
                name="delayTime" 
                class="form-control" 
                placeholder="e.g., 2 hours, 10:00 AM"
            />
        </div>
        
        <div class="form-group">
            <label for="reason" class="form-label">Reason</label>
            <textarea 
                id="reason" 
                name="reason" 
                class="form-control" 
                placeholder="Weather conditions, power outage, etc."
                rows="2"
            ></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit Closing</button>
    </form>
</div>

