    background: transparent;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: var(--space-1);
    transition: color 0.2s ease;
}

.btn-icon:hover {
    color: var(--text-primary);
}

.btn-icon.delete:hover {
    color: var(--red);
}

.empty-state {
    text-align: center;
    padding: var(--space-8);
    color: var(--text-secondary);
}

