<div class="hero fade-in">
    <h1>JWT Decoder</h1>
    <p class="lead">Decode and validate JSON Web Tokens</p>
</div>

<%- include('../../partials/endpoint-form', {
    title: 'JWT Decoder',
    description: 'Paste a JWT token to decode its payload and header',
    formId: 'jwtForm',
    submitText: 'Decode Token',
    formContent: `
        <div class="form-group">
            <label for="token" class="form-label">JWT Token</label>
            <textarea 
                id="token" 
                name="token" 
                class="form-control" 
                placeholder="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                rows="4"
                required
            ></textarea>
        </div>
        
        <div class="form-group">
            <label for="secret" class="form-label">Secret (Optional)</label>
            <input 
                type="text" 
                id="secret" 
                name="secret" 
                class="form-control" 
                placeholder="Enter secret to verify signature (optional)"
            />
            <small class="text-secondary">Leave empty to only decode without verification</small>
        </div>
    `
}) %>

<%- locals.customScripts = '<script src="/js/utility-forms.js"></script>' %>

