<div class="hero fade-in">
    <h1>Base64 Encoder/Decoder</h1>
    <p class="lead">Encode and decode text to/from Base64 format</p>
</div>

<%- include('../../partials/endpoint-form', {
    title: 'Base64 Converter',
    description: 'Enter text to encode or Base64 string to decode',
    formId: 'base64Form',
    submitText: 'Process',
    formContent: `
        <div class="form-group">
            <label for="input" class="form-label">Input Text</label>
            <textarea 
                id="input" 
                name="text" 
                class="form-control" 
                placeholder="Enter text to encode or Base64 to decode..."
                required
            ></textarea>
        </div>
        
        <div class="form-group">
            <label for="action" class="form-label">Action</label>
            <select id="action" name="action" class="form-control" required>
                <option value="encode">Encode to Base64</option>
                <option value="decode">Decode from Base64</option>
            </select>
        </div>
    `
}) %>

<%- locals.customScripts = '<script src="/js/base64.js"></script>' %>