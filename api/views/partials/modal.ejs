<!-- Native HTML5 Dialog Modal Component -->
<dialog id="globalModal" class="modal-dialog" aria-labelledby="modalTitle" aria-describedby="modalMessage">
  <form method="dialog" class="modal-content">
    <header class="modal-header">
      <h2 class="modal-title" id="modalTitle">Notification</h2>
      <button type="button" class="modal-close" aria-label="Close dialog" onclick="closeModal()">&times;</button>
    </header>
    <div class="modal-body" id="modalBody">
      <p id="modalMessage"></p>
    </div>
    <footer class="modal-footer" id="modalFooter">
      <button type="submit" class="btn btn-primary">OK</button>
    </footer>
  </form>
</dialog>

<style>
/* Native dialog reset and styling */
dialog.modal-dialog {
  padding: 0;
  border: none;
  border-radius: var(--radius-lg, 0.5rem);
  max-width: min(500px, 90vw);
  width: 100%;
  background-color: var(--bg-secondary, #282a36);
  color: var(--text-primary, #f8f8f2);
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

dialog.modal-dialog::backdrop {
  background-color: rgba(0, 0, 0, 0.7);
  animation: fadeIn 0.2s ease;
}

dialog.modal-dialog[open] {
  animation: slideIn 0.3s ease;
}

.modal-content {
  margin: 0;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 2px solid var(--border-color, #44475a);
}

.modal-title {
  margin: 0;
  color: var(--purple, #bd93f9);
  font-size: 1.25rem;
  font-weight: 600;
}

.modal-close {
  background: none;
  border: none;
  color: var(--text-secondary, #6272a4);
  font-size: 2rem;
  line-height: 1;
  cursor: pointer;
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-sm, 0.25rem);
  transition: all 0.2s;
}

.modal-close:hover,
.modal-close:focus {
  background-color: var(--bg-primary, #21222c);
  color: var(--text-primary, #f8f8f2);
  outline: 2px solid var(--purple, #bd93f9);
  outline-offset: 2px;
}

.modal-body {
  padding: 1.5rem;
  color: var(--text-primary, #f8f8f2);
}

.modal-footer {
  padding: 1rem 1.5rem;
  border-top: 2px solid var(--border-color, #44475a);
  display: flex;
  justify-content: flex-end;
  gap: 0.5rem;
}

.modal-body p {
  margin: 0;
  line-height: 1.6;
}

/* Modal variants */
dialog.modal-success .modal-header {
  border-color: var(--green, #50fa7b);
}
dialog.modal-success .modal-title {
  color: var(--green, #50fa7b);
}

dialog.modal-error .modal-header {
  border-color: var(--red, #ff5555);
}
dialog.modal-error .modal-title {
  color: var(--red, #ff5555);
}

dialog.modal-warning .modal-header {
  border-color: var(--yellow, #f1fa8c);
}
dialog.modal-warning .modal-title {
  color: var(--yellow, #f1fa8c);
}

dialog.modal-info .modal-header {
  border-color: var(--cyan, #8be9fd);
}
dialog.modal-info .modal-title {
  color: var(--cyan, #8be9fd);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideIn {
  from {
    transform: translateY(-50px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Focus visible for accessibility */
dialog.modal-dialog:focus-visible {
  outline: 2px solid var(--purple, #bd93f9);
  outline-offset: 2px;
}

.modal-footer button:focus-visible {
  outline: 2px solid var(--purple, #bd93f9);
  outline-offset: 2px;
}
</style>

<script>
// Native dialog modal functions
const globalModal = document.getElementById('globalModal');

function showModal(message, title = 'Notification', type = 'info') {
  const modalTitle = document.getElementById('modalTitle');
  const modalMessage = document.getElementById('modalMessage');
  const modalFooter = document.getElementById('modalFooter');

  // Remove all type classes
  globalModal.classList.remove('modal-success', 'modal-error', 'modal-warning', 'modal-info');

  // Add appropriate type class
  if (type) {
    globalModal.classList.add(`modal-${type}`);
  }

  modalTitle.textContent = title;
  modalMessage.textContent = message;

  // Reset footer to OK button
  modalFooter.innerHTML = '<button type="submit" class="btn btn-primary">OK</button>';

  // Show dialog
  globalModal.showModal();
}

function closeModal() {
  globalModal.close();
}

// Confirmation modal with Yes/No buttons
function showConfirm(message, title = 'Confirm', onConfirm, onCancel) {
  const modalTitle = document.getElementById('modalTitle');
  const modalMessage = document.getElementById('modalMessage');
  const modalFooter = document.getElementById('modalFooter');

  // Remove all type classes and add warning
  globalModal.classList.remove('modal-success', 'modal-error', 'modal-info');
  globalModal.classList.add('modal-warning');

  modalTitle.textContent = title;
  modalMessage.textContent = message;

  // Create Yes/No buttons
  modalFooter.innerHTML = `
    <button type="button" class="btn btn-secondary" id="confirmNo">No</button>
    <button type="button" class="btn btn-danger" id="confirmYes">Yes</button>
  `;

  // Attach event listeners
  document.getElementById('confirmNo').onclick = () => {
    closeModal();
    if (onCancel) onCancel();
  };

  document.getElementById('confirmYes').onclick = () => {
    closeModal();
    if (onConfirm) onConfirm();
  };

  globalModal.showModal();
}

// Handle dialog close event (Escape key or backdrop click)
globalModal.addEventListener('close', () => {
  // Clean up any pending callbacks
  if (window._cancelCallback) {
    window._cancelCallback();
    delete window._confirmCallback;
    delete window._cancelCallback;
  }
});

// Close on backdrop click
globalModal.addEventListener('click', (e) => {
  if (e.target === globalModal) {
    closeModal();
  }
});

// Override window.alert with native dialog
window.alert = function(message) {
  showModal(message, 'Alert', 'info');
};

// Override window.confirm with native dialog (returns Promise)
window.confirm = function(message) {
  return new Promise((resolve) => {
    window._cancelCallback = () => resolve(false);
    showConfirm(message, 'Confirm',
      () => resolve(true),
      () => resolve(false)
    );
  });
};
</script>
