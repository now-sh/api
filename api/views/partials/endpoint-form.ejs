<div class="card">
    <h2 class="card-title"><%= title %></h2>
    <p class="card-text mb-4"><%= description %></p>
    
    <form id="<%= formId %>" class="api-form">
        <%- formContent %>
        
        <div class="btn-group mt-4">
            <button type="submit" class="btn btn-primary">
                <%= submitText || 'Process' %>
            </button>
            <button type="reset" class="btn btn-secondary">
                Clear
            </button>
        </div>
    </form>
    
    <div id="<%= formId %>-result" class="result-container mt-6" style="display: none;">
        <h3 class="mb-3">Result:</h3>
        <pre class="result-output"></pre>
        <button class="btn btn-sm copy-btn mt-2" data-form-id="<%= formId %>">Copy Result</button>
    </div>
</div>


<style>
.api-form {
    max-width: 600px;
    margin: 0 auto;
}

.form-group {
    margin-bottom: var(--space-4);
}

.form-label {
    display: block;
    margin-bottom: var(--space-2);
    font-weight: 500;
    color: var(--text-primary);
}

.form-control {
    width: 100%;
    padding: var(--space-3);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--text-base);
    transition: all 0.2s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--purple);
    box-shadow: 0 0 0 3px rgba(189, 147, 249, 0.1);
}

textarea.form-control {
    resize: vertical;
    min-height: 120px;
    font-family: inherit;
}

select.form-control {
    cursor: pointer;
}

.result-container {
    background-color: var(--bg-secondary);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-color);
}

.result-output {
    background-color: var(--bg-primary);
    padding: var(--space-4);
    border-radius: var(--radius-md);
    overflow-x: auto;
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    max-height: 400px;
    overflow-y: auto;
}

.copy-btn {
    background-color: var(--cyan);
    color: var(--background);
}

.copy-btn:hover {
    background-color: var(--green);
}
</style>