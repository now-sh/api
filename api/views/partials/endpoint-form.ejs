<div class="card">
    <h2 class="card-title"><%= title %></h2>
    <p class="card-text mb-4"><%= description %></p>
    
    <form id="<%= formId %>" class="api-form" data-endpoint="<%= locals.endpoint || '' %>" data-method="<%= locals.method || 'POST' %>">
        <%- formContent %>
        
        <div class="btn-group mt-4">
            <button type="submit" class="btn btn-primary">
                <%= submitText || 'Process' %>
            </button>
            <button type="reset" class="btn btn-secondary">
                Clear
            </button>
        </div>
    </form>
    
    <div id="<%= formId %>-result" class="result-container mt-6" style="display: none;">
        <h3 class="mb-3">Result:</h3>
        <pre class="result-output"></pre>
        <button class="btn btn-sm copy-btn mt-2" data-form-id="<%= formId %>">Copy Result</button>
    </div>
</div>